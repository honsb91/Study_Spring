/**
 * 공통 적용 함수 선언
 */
 
$(function(){
		
		if($(".date").length > 0){
		   $.datepicker.setDefaults({
			dateFormat: "yy-mm-dd",
			changeYear : true,
			changeMonth : true,
			showMonthAfterYear: true,
			dayNamesMin: ["일","월","화","수","목","금","토"],
			monthNameShort: ["1월","2월","3월","4월","5월","6월","7월","8월","9월","10월","11월","12월"]
		})	
			
		}
		
		
		$(".date").datepicker();
	
	
})