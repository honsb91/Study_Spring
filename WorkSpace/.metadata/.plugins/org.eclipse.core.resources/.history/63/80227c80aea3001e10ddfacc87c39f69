/**
 * 공통 적용 함수 선언
 */
 
$(function(){
		
		if($(".date").length > 0){
		   $.datepicker.setDefaults({
			dateFormat: "yy-mm-dd",
			changeYear : true,
			changeMonth : true,
			showMonthAfterYear: true,
			dayNamesShort: ["일","월","화","수","목","금","토"]
		})	
			
		}
		
		
		$(".date").datepicker();
	
	
})